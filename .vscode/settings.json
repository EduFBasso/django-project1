{
  // Terminal: zsh como padr√£o no macOS
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh",
      "icon": "terminal",
      "args": ["-l"]
    },
    "bash": {
      "path": "/bin/bash",
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.shellIntegration.enabled": true,

  // UI e editor (fontes macOS)
  "window.zoomLevel": -0.3,
  "editor.fontSize": 14,
  "editor.fontFamily": "'SF Mono', 'Menlo', 'Monaco', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "chat.editor.fontWeight": "100",
  "editor.fontWeight": "100",
  "editor.letterSpacing": -0.5,
  "editor.glyphMargin": false,

  // Code Runner (ajustado para macOS)
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "ts-node",
    "python": "clear && python -u $fullFileName",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "c": "gcc $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
    "cpp": "g++ $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt"
  },

  // Prefer√™ncias
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.formatOnSave": true,
  "explorer.compactFolders": false,

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "OM Theme (Default Dracula Italic)",

  // "debug.console.fontSize": 16,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "monospace",
  "workbench.activityBar.location": "default",

  "breadcrumbs.enabled": false,
  // "editor.lineNumbers": "off",
  "files.eol": "\n", // Final de linha sempre ser√° LF

  // üõ† Formata√ß√£o e Lint
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ‚öñÔ∏è ESLint ‚Äì reduzir ru√≠do sem desligar qualidade
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Rebaixa regras mais barulhentas para "warn" no Problems
  "eslint.rules.customizations": [
    { "rule": "@typescript-eslint/no-unused-vars", "severity": "warn" },
    { "rule": "react-hooks/exhaustive-deps", "severity": "warn" }
  ],
  // Monorepo: direcione o ESLint para a pasta do frontend
  "eslint.workingDirectories": [
    { "directory": "./frontend", "changeProcessCWD": true }
  ],
  // Python interpreter (macOS - ambiente virtual na raiz do projeto)
  "python.defaultInterpreterPath": "venv/bin/python",
  "python-envs.pythonProjects": [],
  "python-envs.defaultEnvManager": "ms-python.python:venv"
}
